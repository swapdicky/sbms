{#
  Custom template for People listing page
  Available vars:
    - rows: rendered rows (each item)
    - empty: message if no result
    - pager: pager links
#}

<section class="people-listing container">
  <h2 class="page-title">Our People</h2>

  {% if rows %}
    <div class="people-grid">
      {{ rows }}
    </div>
  {% else %}
    <p class="no-people">No people found.</p>
  {% endif %}

  {{ pager }}
</section>